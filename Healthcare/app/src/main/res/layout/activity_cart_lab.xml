<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".CartLabActivity">


    <TextView
        android:id="@+id/cartlab_title_24x7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:text="24*7 HEALTHCARE"
        android:textColor="@color/purple_200"
        android:textSize="35dp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/cartlab_cart_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:text="Lab Test Cart Item"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/cartlab_test_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:text="Deliver Location : PUNE"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/cartlab_list_view"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="10dp" />
        <TextView
            android:id="@+id/cartlab_total_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Cost : 420"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:gravity="center"
        >
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.04"
        android:text="select Date"
        android:id="@+id/cartlab_date_textview"
        android:textColor="@color/yellowLight"
        />

        <Button
            android:id="@+id/cartlab_app_date_select"
            style="?android:spinnerStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:text="18/08/1998"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.04"
            android:text="Time"
            android:id="@+id/cartlab_time_textview"
            android:textColor="@color/yellowLight"
            />

        <Button
            android:id="@+id/cartlab_app_time_select"
            style="?android:spinnerStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:text="10:30"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
        <Button
            android:id="@+id/cartlab_backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BACK"
            android:backgroundTint="@color/colorRed"
            android:background="@drawable/input_bg"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="25dp"/>
        <Button
            android:id="@+id/cartlab_cheackout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CHECHOUT"
            android:backgroundTint="@color/colorRed"
            android:background="@drawable/input_bg"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="25dp"/>
    </LinearLayout>



</LinearLayout>